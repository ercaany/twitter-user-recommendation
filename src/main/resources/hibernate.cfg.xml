<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Genel özellikler -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="current_session_context_class">thread</property>
        <property name="show_sql">true</property>

        <!-- Veritabanı bağlantı bilgileri -->
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/user_recommendation</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>

        <!-- Mapping sınıfları -->
        <mapping class="model.PlainTweet"/>
        <mapping class="model.OrderedWordList"/>
        <mapping class="model.StopWords"/>
        <mapping class="model.AllWords"/>
    </session-factory>
</hibernate-configuration>